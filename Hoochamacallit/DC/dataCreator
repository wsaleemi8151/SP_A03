#
# this makefile will compile and link the "Data Creator" application
# 
# =======================================================
#                  Data Creator
# =======================================================
# FINAL BINARY Target
../Common/bin/dataCreator : ../Common/obj/data_creator.o ../Common/obj/logger.o ../Common/obj/message_queues.o
	cc ../Common/obj/data_creator.o ../Common/obj/logger.o ../Common/obj/message_queues.o -o ../Common/bin/dataCreator
#
# =======================================================
#                     Dependencies
# =======================================================                     
../Common/obj/data_creator.o : ./src/data_creator.c ./inc/data_creator.h ../Common/inc/common.h 
	cc -c ./src/data_creator.c -o ../Common/obj/data_creator.o
	                
../Common/obj/logger.o : ../Common/src/logger.c ../Common/inc/logger.h 
	cc -c ../Common/src/logger.c -o ../Common/obj/logger.o

../Common/obj/message_queues.o : ../Common/src/message_queues.c ../Common/inc/message_queues.h 
	cc -c ../Common/src/message_queues.c -o ../Common/obj/message_queues.o

#
# =======================================================
# Other targets
# ======================================================= 
all: ../Common/bin/dataCreator

clean: 
	rm -f ../Common/bin/dataCreator*
	rm -f ../Common/obj/data_creator.*
	rm -f ../Common/obj/logger.*
	rm -f ../Common/obj/message_queues.*

